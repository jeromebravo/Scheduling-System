<%- include("../partials/header") %>

<link rel="stylesheet" href="/stylesheets/teachers/new.css">

<div class="container mt-4">
    <h1>Edit Teacher</h1>
    <hr>
    <div class="row">
        <div class="col-md-3">
            <form action="/teachers/<%= teacher._id %>/edit/grade" method="POST">
                <div class="form-group">
                    <label for="grade">Grade</label>
                    <input class="form-control" type="text" name="grade" id="grade" placeholder="grade" required>
                </div>
                <button type="submit" id="addGrade" class="btn btn-primary btn-block">Add</button>
                <hr>
            </form>

            <form action="/teachers/<%= teacher._id %>/edit/subject" method="POST">
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input  class="form-control" type="text" name="subject" id="subject" placeholder="subject" required>
                </div>
                <button type="submit" id="addSubject" class="btn btn-primary btn-block">Add</button>
                <hr>
            </form>

            <form action="/teachers/<%= teacher._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="name" value="<%= teacher.name %>" required>
                </div>
                <div class="form-group">
                    <label for="hours">Hours</label>
                    <input class="form-control" type="number" name="hours" id="hours" placeholder="hours" value="<%= teacher.hours %>" required>
                </div>
                <button type="submit" id="submit" class="btn btn-primary btn-block float-right mb-4">Update</button>
            </form>
        </div>

        <div class="col-md-9">
            <table class="table table-striped text-center">
                <thead>
                    <tr class="bg-primary text-white">
                        <th>Grade</th>
                    </tr>
                </thead>
                <tbody>
                    <% teacher["grades"].forEach(function(grade){ %>
                        <tr>
                            <td>
                                <form action="/teachers/<%= teacher._id %>/edit/grade/<%= grade %>?_method=DELETE" method="POST" class="form-inline float-left">
                                    <button class="btn btn-danger"><i class='far fa-trash-alt'></i> Delete</button>  
                                </form>
                                <p class="d-inline"><%= grade %></p>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

            <table class="table table-striped text-center">
                <thead>
                    <tr class="bg-primary text-white">
                        <th>Subject</th>
                    </tr>
                </thead>
                <tbody>
                    <% teacher["subjects"].forEach(function(subject){ %>
                        <tr>
                            <td>
                                <form action="/teachers/<%= teacher._id %>/edit/subject/<%= subject %>?_method=DELETE" method="POST" class="form-inline float-left">
                                    <button class="btn btn-danger"><i class='far fa-trash-alt'></i> Delete</button>  
                                </form>
                                <p class="d-inline"><%= subject %></p>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>