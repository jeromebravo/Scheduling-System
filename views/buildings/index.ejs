<%- include("../partials/header") %>

<link rel="stylesheet" href="/stylesheets/buildings/index.css">

<div class="container mt-4">
    <div id="content">
        <div class="row">
            <div class="col-12 col-sm-4">
                <a href="/buildings/new" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Building</a>
            </div>
            <div class="col-12 col-sm-8">
                <form action="/buildings/search" method="POST" class="form-inline float-left float-sm-right">
                    <input class="form-control mr-3" type="text" name="building" id="building" placeholder="building name">
                    <button class="btn btn-warning"><i class="fas fa-search"></i> Search</button>
                </form>
            </div>
            
            <div class="col-12">
                <hr>
            </div>

            <% buildings.forEach(function(building){ %>
                <div class="col-sm-4 col-md-3 col-lg-2 d-flex mb-4">
                    <div class="card text-center">
                        <img class="card-img-top" src="/images/building.png">
                        <div class="card-body">
                            <p class="card-title"><%= building.name %></p>
                            <a class="button btn btn-primary" href="/buildings/<%= building._id %>">View Rooms</a>
                            <a class="button btn btn-warning mt-sm-1" href="/buildings/<%= building._id %>/edit"><i class="far fa-edit"></i> Edit</a>
                            <form class="d-inline" action="/buildings/<%= building._id %>?_method=DELETE" method="POST">
                                <button class="delete button btn btn-danger mt-sm-1"><i class="far fa-trash-alt"></i> Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<script>
    $(".delete").on("click", function(){
        var result = confirm("Delete?");

        if(result) {
            return true;
        } else {
            return false;
        }
    });
</script>

<%- include("../partials/footer") %>