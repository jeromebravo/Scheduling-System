<%- include("../partials/header") %>

<link rel="stylesheet" href="/stylesheets/subjects/show.css">

<div class="container">
    <h1>Grade <%= section.grade %> Section <%= section.section %></h1>
    
    <hr>

    <table class="table table-striped text-center">
        <thead>
            <tr class="bg-primary text-white">
                <th>Subject</th>
                <th>Time In</th>
                <th>Time Out</th>
                <th>Teacher</th>
                <th>Room</th>
            </tr>
        </thead>
        <tbody>
            <% function compare( a, b ) { %>
                <% if ( a.timeIn < b.timeIn ) { %>
                  <% return -1; %>
                <% } %>
                <% if ( a.timeIn > b.timeIn ) { %>
                  <% return 1; %>
                <% } %>
                <% return 0; %>
            <% } %>
            <% section["schedule"].sort(compare); %>
            <% section["schedule"].forEach(function(schedule){ %>
                <% if(schedule.section !== "" && schedule.subject) { %>
                    <tr>
                        <td><%= schedule.subject %></td>
                        <td><%= schedule.timeIn %></td>
                        <td><%= schedule.timeOut %></td>
                        <td><%= schedule.teacher %></td>
                        <td><%= schedule.room %></td>
                    </tr>
                <% } %>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include("../partials/footer") %>