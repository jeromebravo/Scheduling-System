<%- include("../partials/header") %>

<link rel="stylesheet" href="/stylesheets/subjects/new.css">

<div class="container mt-4">
    <h1>Add New Grade</h1>
    <hr>
    <div class="row">
        <div class="col-md-3">
            <form action="/grade/new" method="POST">
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input  class="form-control" type="text" name="subject[name]" id="subject" placeholder="subject" required>
                </div>
                <div class="form-group">
                    <label for="minutes">Minutes</label>
                    <input  class="form-control" type="number" name="subject[minutes]" id="minutes" placeholder="minutes" required>
                </div>
                <button type="submit" id="add" class="btn btn-primary btn-block">Add</button>
                <hr>
            </form>

            <form action="/grade" method="POST">
                <div class="form-group">
                    <label for="grade">Grade</label>
                    <input  class="form-control" type="text" name="grade" id="grade" placeholder="grade" required>
                </div>
                <button type="submit" id="submit" class="btn btn-primary btn-block float-right mb-4">Submit</button>
            </form>
        </div>
        <div class="col-md-9">
            <table class="table table-striped text-center">
                <thead>
                    <tr class="bg-primary text-white">
                        <th>Subject</th>
                        <th>Minutes</th>
                    </tr>
                </thead>
                <tbody>
                    <% subjects.forEach(function(subject){ %>
                        <tr>
                            <td>
                                <form action="/grade/new/<%= subject.name %>?_method=DELETE" method="POST" class="form-inline float-left">
                                    <button id="delete" class="btn btn-danger"><i class='far fa-trash-alt'></i> Delete</button>  
                                </form>
                                <p class="d-inline"><%= subject.name %></p>
                            </td>
                            <td><%= subject.minutes %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

