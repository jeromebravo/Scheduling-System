<%- include("../../partials/header") %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1><%= building %></h1>
            <hr>
        </div>
        <% rooms.forEach(function(room){ %>
            <div class="col-sm-4 col-md-3 col-lg-2 d-flex mb-4">
                <div class="card text-center">
                    <img class="card-img-top" src="/images/room.png">
                    <div class="card-body">
                        <p class="card-title"><%= room.roomNumber %></p>
                        <a class="btn btn-primary" href="/schedule/searchBuilding/rooms/<%= room._id %>">View schedule</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include("../../partials/footer") %>