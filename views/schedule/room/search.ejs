    <div class="row">
        <div id="content" class="col-3">
            <p class="lead text-center">Search building</p>
            <form action="/schedule/searchBuilding/rooms" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="building" id="building" placeholder="building" required>
